<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.livruen.amexer.FoodAmExer"
    android:background="@color/backgroundOstfalia">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_campuses"
        android:background="@color/wolfenbuettelBlue"
        android:text="exer campus"
        android:focusable="false"
        android:textColor="#ffffff"
        android:layout_row="0"
        android:layout_column="0"
        android:inputType="none"
        android:layout_columnSpan="2"
        android:gravity="center"
        android:layout_gravity="left|top" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:id="@+id/space2"
        android:background="@color/backgroundOstfalia"
        android:layout_below="@+id/editText_campuses"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/solferino_state"
        android:focusable="false"
        android:enabled="false"
        android:elegantTextHeight="false"
        android:textIsSelectable="false"
        android:clickable="false"
        android:layout_gravity="right|center_vertical"
        android:layout_row="1"
        android:layout_column="1"
        android:inputType="none"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/solferino_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/solferino_button" />

    <ImageButton
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:id="@+id/solferino_button"
        android:background="@mipmap/ic_solferino"
        android:clickable="true"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="left|center_vertical"

        android:adjustViewBounds="false"
        android:layout_below="@+id/space2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solferino_time"
        android:layout_row="2"
        android:layout_column="1"
        android:text="open till 16:00"
        android:textSize="12dp"
        android:inputType="none"
        android:focusable="false"
        android:gravity="center"
        android:layout_gravity="right|bottom"
        android:textIsSelectable="false"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/solferino_state"
        android:layout_toRightOf="@+id/solferino_button"
        android:layout_marginBottom="19dp"
        android:layout_alignRight="@+id/solferino_state"
        android:layout_alignEnd="@+id/solferino_state" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solferino_text"
        android:textColor="#2ca61f"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_alignTop="@+id/solferino_state"
        android:layout_toRightOf="@+id/solferino_button"
        android:layout_above="@+id/solferino_time"
        android:layout_alignRight="@+id/solferino_state"
        android:layout_alignEnd="@+id/solferino_state"
        android:textSize="22dp"


        android:textStyle="normal"
        android:focusable="false"
        android:textIsSelectable="false"
        android:editable="true"
        android:text="Open" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:focusable="false"
        android:enabled="false"
        android:elegantTextHeight="false"
        android:clickable="false"
        android:layout_gravity="right|center_vertical"
        android:layout_row="1"
        android:layout_column="1"
        android:inputType="none"
        android:background="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton2" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/solferino_state"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/solferino_state"
        android:layout_alignEnd="@+id/solferino_state"
        android:id="@+id/space" />

    <ImageButton
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:id="@+id/imageButton2"
        android:background="@mipmap/ic_limes"
        android:clickable="true"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="left|center_vertical"
        android:adjustViewBounds="false"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/limes_text"
        android:textColor="#be2328"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:textSize="22dp"
        android:focusable="false"
        android:layout_alignTop="@+id/editText4"
        android:layout_above="@+id/limes_time"
        android:editable="true"
        android:text="Close" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/limes_time"
        android:layout_row="2"
        android:layout_column="1"
        android:text="see you tommorow at 8:00"
        android:textSize="12dp"
        android:inputType="none"
        android:gravity="center"
        android:focusable="false"
        android:layout_gravity="right|bottom"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/editText4"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_marginBottom="19dp"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4" />

</RelativeLayout>
